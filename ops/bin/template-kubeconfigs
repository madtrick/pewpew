#!/usr/bin/env node

require('ts-node').register({ transpileOnly: true })
const templater = require('../tools/resolve-k8s-templates').default
const yargs = require('yargs')

const argv = yargs
.option('t', {
  alias: 'template',
  type: 'string',
  demandOption: true
})
.option('p', {
  alias: 'project id',
  type: 'string',
  demandOption: true
})
.option('h', {
  alias: 'hash',
  type: 'string',
  demandOption: true
}).argv

const main = async () => {
  const context = {
    ImageTag: argv.h,
    ProjectId: argv.p
  };

  templater({ templatedFile: argv.t, context })
};

main();
